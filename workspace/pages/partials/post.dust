<article>
  <header>
    <h2><a href="/post/{attributes._id}">{attributes.title}</a></h2>
    <p>
      By <strong>{attributes.author}</strong> on <time>{attributes.date}</time>
        {@formatDate
          data=attributes.date
          parseFormat="YYYY-DD-MMMTh:mm:ss.ZZ"
          format="MMMM Do, YYYY"
        /}
      </time>
    </p>
  </header>

  {contentHtml|s}
</article>