{
  "global": {
    "site": "dadi-web-csrf-test",
    "description": "An example of using CSRF protection"
  },
  "globalEvents": [
    "global"
  ],
  "server": {
    "host": "127.0.0.1",
    "port": 3001
  },
  "security": {
    "csrf": true
  },
  "cluster": false,
  "paths": {
    "workspace": "workspace",
    "datasources": "workspace/datasources",
    "pages": "workspace/pages",
    "events": "workspace/events",
    "middleware": "workspace/middleware",
    "media": "workspace/media",
    "public": "workspace/public",
    "routes": "workspace/routes"
  },
  "allowJsonView": true,
  "debug": true
}